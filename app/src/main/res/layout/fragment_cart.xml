<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/sp_4"
    android:layout_marginRight="@dimen/sp_4"
    tools:context=".ui.cart.CartFragment">

    <LinearLayout
        android:id="@+id/layoutHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".9">

            <TextView
                android:id="@+id/tvProductName"
                style="@style/TextAppearance.SecureQRReader.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Product"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".9">

            <TextView
                android:id="@+id/tvQuantity"
                style="@style/TextAppearance.SecureQRReader.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Quantity"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".9">

            <TextView
                android:id="@+id/tvRate"
                style="@style/TextAppearance.SecureQRReader.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Rate"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_1"
        android:layout_margin="@dimen/sp_12"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/layoutHeadline" />

    <TextView
        android:id="@+id/tvNoContent"
        style="@style/TextAppearance.SecureQRReader.Body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/layoutHeadline" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/sp_50"
        android:layout_marginBottom="@dimen/sp_60"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/vLine"
        tools:listitem="@layout/row_item_cart" />

</androidx.constraintlayout.widget.ConstraintLayout>