<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/sp_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <EditText
            android:id="@+id/scannedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sp_26"
            android:layout_marginTop="@dimen/sp_50"
            android:background="@drawable/border"
            android:hint="Enter Email-Id"
            android:padding="10dp"
            android:textColor="@color/grey"
            android:textCursorDrawable="@drawable/cursor_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/cancelDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_8"
            android:layout_marginTop="@dimen/sp_26"
            android:layout_marginEnd="@dimen/sp_4"
            android:text="@string/cancel"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/submitDialog"
            app:layout_constraintTop_toBottomOf="@id/scannedText" />


        <Button
            android:id="@+id/submitDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_4"
            android:layout_marginTop="@dimen/sp_26"
            android:layout_marginEnd="@dimen/sp_8"
            android:text="@string/submit"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toRightOf="@+id/cancelDialog"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scannedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
